<div class="container">
  <div class="box">
    <%= simple_form_for @ingredient do |f| %>
      <%= f.input :name %>
      <%= f.input :category, collection: ["Alcohol", "Soda", "Juice", "Veggies", "Spice", "Other"] %>
      <%= f.button :submit, class: 'button_color', value: "Add Ingredient" %>
    <% end %>
  </div>
  <%= link_to "Back", :back %>
</div>
