<h1><%= @cocktail.name %></h1>

<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail) %>
</br>
</br>
<h3>List of ingredients:</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %> - <%= link_to "Delete ingredient", dose, method: :delete, data: { confirm: 'Are you sure?' }  %></li>
  <% end %>
</ul>

<%= link_to "Back to Cocktails", cocktails_path %>
