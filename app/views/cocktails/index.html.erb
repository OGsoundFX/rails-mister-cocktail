<div class="container-fluid no-padding">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= cl_image_path Cocktail.first.photo.key %>);">
    <div class="container">
      <h1 id="place-title">Share your <strong>Cocktail</strong> recepies!</h1>
      <%= link_to "Share your Cocktail", new_cocktail_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="container d-flex justify-content-between">
          <div class="card-trip">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, crop: :fill %>
            <% else %>
              <%= image_tag "favicon.ico" %>
            <% end %>
            <div class="card-trip-infos">
              <div class="d-flex">
                <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>&nbsp&nbsp&nbsp<h6>by <%= cocktail.author %></h6>
              </div>
              <h2 class="card-trip-pricing"><%=  %></h2>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


