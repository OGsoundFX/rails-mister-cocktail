<div class="container bar-background">
  <h1><%= @bar.name %></h1>
  <% if @bar.photo.attached? %>
      <%= image_tag @bar.photo %>
  <% end %>
  <h4><%= @bar.address %></h4>
  <div class="container">
    <div id="map"
      style="width: 100%; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <%= link_to "Back to bars", cocktail_bars_path %>
</div>


